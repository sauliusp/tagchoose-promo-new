---
import { SITE } from '../config.ts';
---
<section class="max-w-3xl mx-auto my-16 md:my-24 text-center">
  <h2 class="text-3xl md:text-5xl font-serif font-bold text-text mb-8">
    Who Benefits Most?
  </h2>
  <div class="flex flex-wrap justify-center gap-4">
    {SITE.userProfiles.map((profile) => (
      <span class="bg-primary/20 text-primary font-semibold px-4 py-2 rounded-full">
        {profile}
      </span>
    ))}
  </div>
</section>