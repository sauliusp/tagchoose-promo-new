---
import Avatar from './Avatar.astro';
---

<footer class="bg-background border-t border-gray-800 py-5">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center justify-between">
      <!-- Personal Credit -->
      <div class="flex items-center justify-center mb-4">
        <Avatar 
          size="sm" 
          primary="a passion project" 
          secondary="by Saulius" 
          showText={true}
        />
      </div>
      
      <!-- Logo -->
      <div class="flex items-center pt-4 pb-6 md:py-0">
        <a href="/" class="text-text hover:text-primary transition-colors duration-200">
          <img src="/logo.png" alt="TagChoose Logo" class="h-8 w-auto" />
        </a>
      </div>
      
      <!-- Copyright -->
      <div class="text-gray-400">
        <p>&copy; 2025 #TagChoose</p>
      </div>
    </div>
  </div>
</footer>