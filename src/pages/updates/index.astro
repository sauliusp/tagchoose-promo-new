---
// src/pages/updates/index.astro
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Avatar from '../../components/Avatar.astro';
import WhoBenefits from '../../components/WhoBenefits.astro';
import { UPDATES, SITE, UPDATE_TYPE } from '../../config'; // Import UPDATE_TYPE
import type { Update, UpdateType } from '../../config';

// Sort updates by date, newest first
const sortedUpdates = UPDATES.sort((a, b) => new Date(b.date).valueOf() - new Date(a.date).valueOf());

// UPDATED: Use the UPDATE_TYPE constant for keys
const categoryStyles: Record<UpdateType, string> = {
  [UPDATE_TYPE.ANNOUNCEMENT]: 'bg-blue-500/10 text-blue-400 border-blue-500/20',
  [UPDATE_TYPE.RELEASE]: 'bg-green-500/10 text-green-400 border-green-500/20',
  [UPDATE_TYPE.TECHNICAL]: 'bg-yellow-500/10 text-yellow-400 border-yellow-500/20',
};
---

<Layout 
  title="Latest Updates - #TagChoose"
  description="The latest news, release notes, and technical updates for the #TagChoose smart bookmark manager."
>
  <Header />
  
  <main>
    <section class="py-20 lg:py-32">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="text-center mb-16">
          <h1 class="text-5xl lg:text-6xl font-bold mb-6 font-serif">
            Latest <span class="text-primary">Updates</span>
          </h1>
          <p class="text-lg text-text/80 max-w-2xl mx-auto">
            Release notes, product announcements, and technical deep-dives for the #TagChoose extension.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedUpdates.map(update => (
            <a href={`/updates/${update.slug}`} class="block">
              <article class="h-full bg-background/50 rounded-lg border border-white/10 overflow-hidden hover:border-primary transition-colors duration-200 flex flex-col">
                <div class="p-6 flex-grow flex flex-col">
                  <div class="flex justify-between items-center mb-3">
                    <span class:list={['text-xs font-semibold px-2.5 py-1 rounded-full border', categoryStyles[update.type]]}>
                      {update.type}
                    </span>
                    <time datetime={update.date} class="text-xs text-text/60">
                      {new Date(update.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                    </time>
                  </div>
                  <h2 class="text-xl font-bold mb-3 text-text flex-grow" set:html={update.titleHtml}></h2>
                  <p class="text-text/70 text-sm mb-4">
                    {update.summary}
                  </p>
                  <div class="flex items-center text-xs text-text/60 mt-auto pt-4 border-t border-white/10">
                    <Avatar 
                      size="xs" 
                      primary={SITE.author.name} 
                      showText={true}
                      standalone={false}
                    />
                  </div>
                </div>
              </article>
            </a>
          ))}
        </div>

        <WhoBenefits />
      </div>
    </section>
  </main>

  <Footer />
</Layout>