---
import Layout from '../layouts/Layout.astro';
import { SITE } from '../config';
---

<Layout 
  title="Page Not Found - #TagChoose"
  description="The page you're looking for doesn't exist. Return to the #TagChoose homepage to explore our smart bookmark manager."
>
  <div class="min-h-screen bg-background flex items-center justify-center">
    <main class="content-container-narrow py-16 md:py-24 text-center">
      <!-- Logo -->
      <div class="mb-12 md:mb-16">
        <a href="/" class="inline-block hover:opacity-80 transition-opacity duration-200">
          <img 
            src={SITE.logoUrl} 
            alt="#TagChoose Logo"  
            class="h-20 md:h-24 w-auto mx-auto"
          />
        </a>
      </div>
      
      <!-- 404 Content -->
      <div class="mb-12 md:mb-16">
        <h1 class="text-8xl md:text-9xl font-bold text-primary mb-6 md:mb-8">404</h1>
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-text mb-6">
          Page Not Found
        </h2>
        <p class="text-lg md:text-xl text-text/80 mb-8 max-w-2xl mx-auto leading-relaxed">
          The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
        </p>
      </div>
      
      <!-- Navigation Links -->
      <div class="space-y-6">
        <a 
          href="/" 
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-background bg-primary rounded-lg hover:bg-opacity-90 focus:ring-4 focus:ring-primary transition-all duration-200"
        >
          Go Back Home
        </a>
        
        <div class="flex flex-wrap justify-center gap-6 text-base">
          <a href="/features" class="text-text hover:text-primary transition-colors duration-200">Features</a>
          <span class="text-text/40">•</span>
          <a href="/manifesto" class="text-text hover:text-primary transition-colors duration-200">Manifesto</a>
          <span class="text-text/40">•</span>
          <a href="/updates" class="text-text hover:text-primary transition-colors duration-200">Updates</a>
        </div>
      </div>
    </main>
  </div>
</Layout>