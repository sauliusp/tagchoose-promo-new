---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { PAGES } from '../config';

// Create a list of pages we want to show, using data from the config file.
// This makes the list easy to update in the future.
const navLinks = [
  { href: '/features', name: PAGES.features.name },
  { href: '/manifesto', name: PAGES.manifesto.name },
  { href: '/updates', name: PAGES.updates.name },
];
---

<Layout 
  title="404: Page Not Found - #TagChoose"
  description="The page you're looking for doesn't exist. Return to the #TagChoose homepage to explore our smart bookmark manager."
>
  <Header />
  
  <main class="container mx-auto px-4 py-20 md:py-32 text-center">
    <div class="mb-12 md:mb-16">
      <h1 class="text-8xl md:text-9xl font-bold text-primary mb-6 md:mb-8">404</h1>
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-text mb-6">
        Page Not Found
      </h2>
      <p class="text-lg md:text-xl text-text/80 mb-8 max-w-2xl mx-auto leading-relaxed">
        The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
      </p>
    </div>
      
    <div class="space-y-8">
      <a 
        href="/" 
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-background bg-primary rounded-lg hover:bg-opacity-90 focus:ring-4 focus:ring-primary transition-all duration-200"
      >
        Go Back Home
      </a>
      
      <div class="flex flex-wrap justify-center items-center gap-4 md:gap-6 text-base">
        {navLinks.map((link, index) => (
          <>
            <a href={link.href} class="text-text/80 hover:text-primary transition-colors duration-200">
              {link.name}
            </a>
            {index < navLinks.length - 1 && <span class="text-text/40">â€¢</span>}
          </>
        ))}
      </div>
    </div>
  </main>

  <Footer />
</Layout>